<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/darker_gray" /> <!-- Background color -->
            <corners android:radius="5dp" /> <!-- Adjust radius for rounded corners -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/red" /> <!-- Progress bar color -->
                <corners android:radius="2dp" /> <!-- Adjust radius for rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>