<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="10dp" />
                    <stroke android:width="1dp" android:color="@color/icon" />
                    <padding
                        android:top="6dp"
                        android:bottom="6dp"
                        android:right="10dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/img_spinner_arrow"
                android:gravity="center_vertical|end"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>
</selector>