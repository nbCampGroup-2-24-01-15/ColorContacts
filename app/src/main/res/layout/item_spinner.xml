<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_register_background">

    <TextView
        android:id="@+id/tv_item_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="asdf"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_item_spinner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_spinner"
        app:layout_constraintVertical_bias="0.487"
        app:srcCompat="@drawable/img_main_downarrow" />

</androidx.constraintlayout.widget.ConstraintLayout>