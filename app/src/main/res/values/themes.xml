<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ColorContacts" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/widget</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
    </style>

    <style name="Theme.ColorContacts" parent="Base.Theme.ColorContacts" />

    <style name="Theme.ColorContacts.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ColorContacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ColorContacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>